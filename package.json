{
  "name": "icoder-plus",
  "version": "2.0.0",
  "type": "module",
  "description": "AI-first IDE in a bottom sheet - Smart coding playground with version history, AI reviews, auto-fixes, live preview, and built-in chat assistant",
  "main": "src/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .js,.jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx --fix"
  },
  "keywords": [
    "ide",
    "ai",
    "code-editor",
    "bottom-sheet",
    "version-history",
    "diff-viewer",
    "live-preview",
    "ai-assistant"
  ],
  "author": "Solar IT Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "diff": "^5.1.0",
    "diff2html": "^3.4.47",
    "monaco-editor": "^0.44.0",
    "@monaco-editor/react": "^4.6.0",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "@eslint/js": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Solarpaletten/icoder-plus.git"
  },
  "bugs": {
    "url": "https://github.com/Solarpaletten/icoder-plus/issues"
